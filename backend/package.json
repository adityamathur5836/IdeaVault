{
  "name": "ideavault-backend",
  "version": "1.0.0",
  "description": "AI-powered SaaS platform backend for business idea generation using Supabase",
  "main": "index.js",
  "scripts": {
    "dev": "supabase start",
    "start": "supabase start",
    "stop": "supabase stop",
    "reset": "supabase db reset",
    "status": "supabase status",
    "db:push": "supabase db push",
    "db:pull": "supabase db pull",
    "db:diff": "supabase db diff",
    "db:reset": "supabase db reset",
    "functions:deploy": "supabase functions deploy",
    "functions:new": "supabase functions new",
    "functions:serve": "supabase functions serve",
    "gen:types": "supabase gen types typescript --local > src/lib/database.types.ts",
    "gen:types:remote": "supabase gen types typescript --project-id YOUR_PROJECT_ID > src/lib/database.types.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "build": "npm run gen:types && npm run type-check",
    "deploy": "npm run db:push && npm run functions:deploy",
    "setup": "npm install && supabase init && cp env.example .env"
  },
  "keywords": [
    "supabase",
    "postgresql",
    "saas",
    "ai",
    "business-ideas",
    "startup",
    "entrepreneurship",
    "real-time",
    "typescript",
    "edge-functions"
  ],
  "author": "IdeaVault Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "csv-parser": "^3.2.0",
    "openai": "^5.19.1",
    "sonner": "^2.0.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ideavault-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ideavault-backend/issues"
  },
  "homepage": "https://github.com/your-username/ideavault-backend#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/supabase/functions"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "supabase/functions/**/*.ts",
      "!src/**/*.d.ts",
      "!supabase/functions/**/*.d.ts"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}
